<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
  
        <td>
        <%= link_to post.user.name, post.user %>
        </td>
        <td><%= link_to 'Show', post %></td>
        
      </tr>
    <% end %>
  </tbody>

</table>


